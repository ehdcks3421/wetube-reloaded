        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", reqruied)
        input(placeholder="Password", name="password",type="password", reqruied)
        input(type="submit", value="Join")    
        include partials/social-login

    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;